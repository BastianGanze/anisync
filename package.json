{
  "name": "weebsync",
  "version": "0.2.1",
  "description": "A small tool to automatically sync files from an ftp server.",
  "license": "MIT",
  "main": "./build/main.js",
  "scripts": {
    "build": "tsc && sass src/main.scss build/main.css",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && electron ./build/main.js",
    "app:dist": "yarn build && electron-builder -p never --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "weeb.sync",
    "productName": "weebsync",
    "files": [
      "build/**/*",
      "static/**/*",
      "index.html"
    ],
    "mac": {
      "category": "files.sync",
      "icon": "static/icon.icns"
    },
    "win": {
      "target": "portable",
      "icon": "static/icon.ico"
    }
  },
  "author": "Bastian Ganze",
  "devDependencies": {
    "@types/ftp": "^0.3.33",
    "@types/node": "^17.0.8",
    "@types/progress-stream": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "electron": "^16.0.6",
    "electron-builder": "^22.14.5",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "sass": "^1.47.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "ftp": "https://github.com/icetee/node-ftp.git",
    "chokidar": "^3.5.2",
    "handlebars": "^4.7.7",
    "progress-stream": "^2.0.0",
    "strongly-typed-events": "^2.1.14",
    "ts-pattern": "^3.3.4"
  }
}
